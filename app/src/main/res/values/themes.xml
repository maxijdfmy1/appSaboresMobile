<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SaboresDeHogar" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/chile_red_light</item>
        <item name="colorPrimaryVariant">@color/chile_red</item>
        <item name="colorOnPrimary">@color/neutral_900</item>

        <item name="colorSecondary">@color/chile_blue_light</item>
        <item name="colorSecondaryVariant">@color/chile_blue</item>
        <item name="colorOnSecondary">@color/neutral_900</item>

        <item name="android:colorBackground">@color/neutral_900</item>
        <item name="colorSurface">@color/neutral_800</item>
        <item name="colorOnSurface">@color/neutral_100</item>

        <item name="android:statusBarColor">@color/neutral_900</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/neutral_900</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/sabores</item>
        <item name="postSplashScreenTheme">@style/Theme.SaboresDeHogar</item>
    </style>
</resources>